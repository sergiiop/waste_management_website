        <swiper-slide>
        </swiper-slide>
          <swiper-slide>
            <div class="flip-card">
              <div class="flip-card-inner">
                  <div class="flip-card-front">
                    <div class="w-3/6 mx-auto">
                      <img src={pictogramasPeligrosos[0].image} alt="Pictograma peligroso">
                    </div>
                      <h3 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{pictogramasPeligrosos[0].title}</h3>
                      <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
                      {
                        pictogramasPeligrosos[0].items.map((item) => (
                          <li>
                              {item.description}
                          </li>
                          ))
                      }
                        </ul>
                  </div>
                  <div class="flip-card-back">
                    <div>
                      <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">¿Qué Significa?</h3>
                      <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
                      {
                        pictogramasPeligrosos[0].meaning.map((item) => (
                          <li>{item.description}</>
                        ))
                      }
                      </ul>
                    </div>
                    <div class="border-t"></div>
                    <div>
                      <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">Ejemplos de dónde pueden encontrarse</h3>
                      <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
                      {
                        pictogramasPeligrosos[0].findExamples.map((item) => (
                          <li>{item.description}</li>
                        ))
                      }
                      </ul>
                    </div>
                    <div class="border-t"></div>
                    <div>
                      <h3>Ejemplos de consejos de prudencia</h3>
                      {
                        pictogramasPeligrosos[0].tipsExample.map((item) => (
                          <p>{item.description}</p>
                        ))
                      }
                    </div>
                  </div>
              </div>
            </div>
          </swiper-slide>
          <swiper-slide>
            <div class="bg-transparent w-48 h-64 perspective-1000 font-sans">
              <div class="text-center transition-transform transform-style-preserve-3d hover:rotate-y-180">
                <div class="shadow-lg absolute flex flex-col justify-center w-full h-full backface-hidden border border-coral rounded-lg bg-gradient-to-br from-bisque to-rgb(255, 211, 195)">
                  <p class="text-2xl font-extrabold mb-2">FLIP CARD</p>
                  <p>Hover Me</p>
                </div>
                <div class="shadow-lg absolute flex flex-col justify-center w-full h-full backface-hidden border border-coral rounded-lg bg-gradient-to-br from-rgb(255, 174, 145) to-coral transform rotate-y-180">
                  <p class="text-2xl font-extrabold mb-2">BACK</p>
                  <p>Leave Me</p>
                </div>
              </div>
            </div>
          </swiper-slide>
          <swiper-slide>Slide 2</swiper-slide>
          <swiper-slide>Slide 2</swiper-slide>
          <swiper-slide>Slide 3</swiper-slide>
        </swiper-container>
      </section>
    </div>
    <div class="snap-center">
    </div>
    <div class="snap-center">
    </div>
    <div class="snap-center">
    </div>
  </main>
</Layout>

